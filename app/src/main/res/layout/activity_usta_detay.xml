<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.detay.UstaDetayActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txtUstaKat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/onbesdp"
                    android:text="@string/tesisatci"
                    android:textColor="@color/black"
                    android:textSize="@dimen/tesisatci_textsize"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imgUstaKapak" />

                <ImageView
                    android:id="@+id/imgUstaKapak"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/usta_kapak_height"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:srcCompat="@color/armut_yesil" />

                <TextView
                    android:id="@+id/txtUstaAdi"
                    android:layout_width="@dimen/tesisatci_Ustaadi_width"
                    android:layout_height="@dimen/tesisatci_Ustaadi_heigt"
                    android:layout_marginTop="@dimen/tesisatci_Ustaadi_margintop"
                    android:text="TextView"
                    android:textSize="@dimen/onbesdp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtUstaKat" />

                <TextView
                    android:id="@+id/txtUstaTelNo"
                    android:layout_width="@dimen/tesisatci_Ustaadi_width"
                    android:layout_height="@dimen/tesisatci_Ustaadi_heigt"
                    android:layout_marginTop="@dimen/text_layout_margin_top"
                    android:text="TextView"
                    android:textSize="@dimen/onbesdp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtUstaAdi" />

                <TextView
                    android:id="@+id/txtUstaMail"
                    android:layout_width="@dimen/tesisatci_Ustaadi_width"
                    android:layout_height="@dimen/tesisatci_Ustaadi_heigt"
                    android:layout_marginTop="@dimen/text_layout_margin_top"
                    android:text="TextView"
                    android:textSize="@dimen/onbesdp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtUstaTelNo" />

                <TextView
                    android:id="@+id/txtAciklama"
                    android:layout_width="@dimen/tesisatci_aciklama_layout_width"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ellibesdp"
                    android:textSize="@dimen/onbesdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.333"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtUstaMail" />

                <ImageView
                    android:id="@+id/ustaResim"
                    android:layout_width="@dimen/ellibesdp"
                    android:layout_height="@dimen/ellibesdp"
                    android:layout_marginTop="@dimen/tesisatci_logo_margintop"
                    android:layout_marginEnd="@dimen/tesisatci_logo_layoutmargin"
                    app:layout_constraintEnd_toStartOf="@+id/txtUstaAdi"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtUstaKat"
                    tools:srcCompat="@tools:sample/avatars" />

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="@dimen/tesisatci_mail_margintop"
                    android:layout_height="35dp"
                    android:layout_marginTop="15dp"
                    app:layout_constraintEnd_toStartOf="@+id/txtUstaTelNo"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ustaResim"
                    app:srcCompat="@drawable/telicon" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="@dimen/tesisatci_mail_margintop"
                    android:layout_height="@dimen/tesisatci_mail_margintop"
                    android:layout_marginTop="@dimen/onbesdp"
                    app:layout_constraintEnd_toStartOf="@+id/txtUstaMail"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView11"
                    app:srcCompat="@drawable/emailicon" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/tesisatci_Ustatel_margintop"
                    android:text="@string/detay"
                    android:textSize="@dimen/onbesdp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.043"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtUstaMail" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>