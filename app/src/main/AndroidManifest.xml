<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ozyurt.armutapp">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".ArmutApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_circle"
        android:supportsRtl="true"
        android:theme="@style/Theme.ArmutApp"
        android:usesCleartextTraffic="true">
        <activity android:name=".ui.detay.UstaDetayActivity"></activity>
        <activity android:name=".ui.ustalar.UstalarActivity" />
        <activity android:name=".ui.kategoriler.KategorilerActivity" />
        <activity android:name=".ui.giris.GirisActivity" />
        <activity android:name=".ui.splash.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>